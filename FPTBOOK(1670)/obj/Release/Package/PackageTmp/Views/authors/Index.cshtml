@model IEnumerable<FPTBOOK_1670_.Models.Author>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Author</h2>

<p>
    @Html.ActionLink("Create New", "Create", "authors", null, new { @class = "btn btn-success" })
</p>
<table id="" class="table table-striped table-bordered" cellspacing="0" width="100%">

    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AuthorName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AuthorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.AuthorID }) |
                @Html.ActionLink("Details", "Details", new { id = item.AuthorID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.AuthorID })
            </td>
        </tr>
    }

</table>
