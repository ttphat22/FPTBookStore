@model IEnumerable<FPTBOOK_1670_.Models.Book>

@{
    ViewBag.Title = "Home Page";
}
<div class="banner-top">
    <div class="header-bottom">
        <div class="header_bottom_right_images">
            <div id="slideshow">
                <ul class="slides">
                    <li><a href="details.html"><canvas></canvas><img src="~/Content/images/b4.jpg" alt="Marsa Alam underawter close up"></a></li>
                    <li><a href="details.html"><canvas></canvas><img src="~/Content/images/2.jpg" alt="Turrimetta Beach - Dawn"></a></li>
                    <li><a href="details.html"><canvas></canvas><img src="~/Content/images/b3.jpg" alt="Power Station"></a></li>
                    <li><a href="details.html"><canvas></canvas><img src="~/Content/images/1.jpg" alt="Colors of Nature"></a></li>
                </ul>
                <span class="arrow previous"></span>
                <span class="arrow next"></span>
            </div>
            <div class="content-wrapper">
                <div class="content-top">
                    <div class="box_wrapper">
                        <h1>New </h1>
                    </div>
                    <div class="text">
                        @foreach (var item in Model)
                        {
                            <div class="grid_1_of_3 images_1_of_3">
                                <div class="grid_1">
                                    <a href="single.html"><img src="~/BookImage/@item.UrlImage" title="continue reading" alt=""></a>
                                    <div class="grid_desc">
                                        <p class="title">@item.BookName</p>
                                        
                                        <div class="price" style="height: 19px;">
                                            <span class="reducedfrom">$ @item.Price</span>
                                            <span class="actual">$ @item.Price</span>
                                        </div>
                                        <div class="cart-button">
                                            <div class="cart">
                                                <a href="#"><img src="images/cart.png" alt="" /></a>
                                            </div>
                                            @*<button class="button"><span>Details</span></button>*@
                                            @Html.ActionLink("Detail", "Detail", "Home", new { id = item.BookID }, new {@class="button"})
                                            <div class="clear"></div>
                                        </div>
                                    </div>
                                </div><div class="clear"></div>
                            </div>
                        }

                       
                        
                    </div>
                </div>

                <div class="content-top">
                    
                    
                        
                        
                    </div>
                </div>
            </div>
        </div>
        <div class="header-para">
            <div class="categories">
                <div class="list-categories">
                    <div class="first-list">
                        <div class="div_2"><a href="#">Book Category</a></div>
                        <div class="div_img">
                            <img src="~/Content/images/c1.jpg" alt="Cars" title="Cars" width="60" height="39">
                        </div><div class="clear"></div>
                    </div>
                    <div class="first-list">
                        <div class="div_2"><a href="#">Orther</a></div>
                        <div class="div_img">
                            <img src="~/Content/images/c2.jpg" alt="Cars" title="Cars" width="60" height="39">
                        </div><div class="clear"></div>
                    </div>
                    <div class="first-list">
                        <div class="div_2"><a href="#">Author</a></div>
                        <div class="div_img">
                            <img src="~/Content/images/c3.jpg" alt="Cars" title="Cars" width="60" height="39">
                        </div><div class="clear"></div>
                    </div>
                    <div class="first-list">
                        <div class="div_2"><a href="#">Service</a></div>
                        <div class="div_img">
                            <img src="~/Content/images/c4.jpg" alt="Cars" title="Cars" width="60" height="39">
                        </div><div class="clear"></div>
                    </div>
                </div>
                <div class="box">
                    <div class="box-heading"><h1><a href="#">Cart:&nbsp;</a></h1></div>
                    <div class="box-content">
                        Now in your cart&nbsp;<strong> 0 items</strong>
                    </div>
                </div>
                <div class="box-title">
                    <h1><span class="title-icon"></span><a href="#">Branches</a></h1>
                </div>
                <div class="section group example">
                    <div class="col_1_of_2 span_1_of_2">
                        <img src="~/Content/images/pic21.jpg" alt="" />
                        <img src="~/Content/images/pic24.jpg" alt="" />
                        <img src="~/Content/images/pic25.jpg" alt="" />
                        <img src="~/Content/images/pic27.jpg" alt="" />
                    </div>
                    <div class="col_1_of_2 span_1_of_2">
                        <img src="~/Content/images/pic22.jpg" alt="" />
                        <img src="~/Content/images/pic23.jpg" alt="" />
                        <img src="~/Content/images/pic26.jpg" alt="" />
                        <img src="~/Content/images/pic28.jpg" alt="" />
                    </div><div class="clear"></div>
                </div>
                <div class="clear"></div>
            </div>
        </div>
    </div>
</div>
