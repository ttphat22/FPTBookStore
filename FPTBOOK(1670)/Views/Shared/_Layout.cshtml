<!DOCTYPE HTML>
<html>
<head>
    <title>FPT BOOK Website Template | Home :: Phat Tran</title>
    <link href="~/Content/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link href='//fonts.googleapis.com/css?family=Playball' rel='stylesheet' type='text/css'>
    <!--slider-->
    <script src="~/Content/js/jquery.min.js"></script>
    <script src="~/Content/js/script.js" type="text/javascript"></script>

</head>
<body>
    <div class="header-bg">
        <div class="wrap">
            <div class="h-bg">
                <div class="total">
                    <div class="header">
                        <div class="box_header_user_menu">
                            <ul class="user_menu">
                                <li class="act first"><a href="#"><div class="button-t"><span>FPT BOOK</span></div></a></li>
                                <li class=""><a href="#"><div class="button-t"><span>Advanced Search</span></div></a></li>

                                @if (Session["Username"] == null)
                                {
                                    <li class="last"><a href="~/User/Register"><div class="button-t"><span>Sign Up</span></div></a></li>
                                    <li class="last"><a href="~/User/Login"><div class="button-t"><span>Log in</span></div></a></li>

                                }
                                else
                                {
                                    <li class="last"><div class="button-t"><span>@Html.ActionLink("Hello " + Session["Username"],"Update","Customer")</span></div></li>
                                    <li class="last"><div class="button-t"><span>@Html.ActionLink("Logout","Logout","User")</span></div></li>

                                }
                            </ul>
                        </div>
                        <div class="header-right">
                            <ul class="follow_icon">
                                <li><a href="#"><img src="images/icon.png" alt="" /></a></li>
                                <li><a href="#"><img src="images/icon1.png" alt="" /></a></li>
                                <li><a href="#"><img src="images/icon2.png" alt="" /></a></li>
                                <li><a href="#"><img src="images/icon3.png" alt="" /></a></li>
                            </ul>

                        </div><div class="clear"></div>
                        <div class="header-bot">
                            <div class="logo">
                                <a href="index.html"><img src="images/logo.png" alt="" /></a>
                            </div>
                            <div class="search">
                                <input type="text" class="textbox" value="" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = '';}">
                                <button class="gray-button"><span>Search</span></button>
                            </div>
                            <div class="clear"></div>
                        </div>
                    </div>
                    <div class="menu">
                        <div class="top-nav">
                            <ul>
                                <li class="active"><a href="~/Home/index">Home</a></li>
                                <li><a href="about.html">About</a></li>
                                <li><a href="specials.html">Specials</a></li>
                                <li><a href="new.html">New</a></li>
                                <li><a href="contact.html">Contact</a></li>
                            </ul>
                            <div class="clear"></div>
                        </div>
                    </div>
                    @RenderBody();
                    <div class="clear"></div>
                    <div class="footer-bottom">
                        <div class="copy">
                            <p>&copy 2022 FPT BOOK Online . All rights Reserved | Design by <a href="https://www.facebook.com/phat2207.0710/">Phat Tran</a></p>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

</body>
</html>



@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)